<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreditsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/credits_logo"
                android:layout_width="251dp"
                android:layout_height="257dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/logosquare"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/credits_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/credits_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:text="By Victor Yeo and Fabian Lim \n AY2018/19S1 IS3261 Project" />

            <TextView
                android:id="@+id/credits_specialthanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/credits_1"
                android:layout_centerHorizontal="true"
                android:text="Special Thanks to:"
                android:layout_marginTop="10dp"
                android:textSize="15dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/credits_specialthanks"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/programiz_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programiz"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/programiz_explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/programiz_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"

                    android:text="For tutorial contents"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/trykotlin_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try Kotlin"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/trykotlin_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/trykotlin_title"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="For Kotlin editor and compiler"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview2"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/kotlinquiz_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kotlin Quiz"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/kotlinquiz_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/kotlinquiz_title"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="For: Kotlin quiz questions and answers"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>
</FrameLayout>